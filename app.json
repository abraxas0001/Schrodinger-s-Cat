{
  "name": "Schrodinger's Cat - File Store Bot",
  "description": "High-performance Telegram file sharing bot with caption controls, force-sub, and MongoDB storage",
  "keywords": [
    "telegram",
    "file",
    "sharing",
    "bot",
    "pyrogram",
    "mongodb"
  ],
  "logo": "https://graph.org/file/6ceef6a98b82b0e0e2f03.jpg",
  "repository": "https://github.com/abraxas0001/Schrodinger-s-Cat",
  "env": {
    "TG_BOT_TOKEN": {
      "description": "Your Bot token from @BotFather",
      "value": "",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram user ID (get from @userinfobot)",
      "value": "",
      "required": true
    },
    "APP_ID":{
      "description": "Your API ID from my.telegram.org",
      "value": "",
      "required": true
    },
    "DATABASE_URL": {
      "description": "MongoDB connection string (create free cluster at mongodb.com/cloud/atlas)",
      "value": "",
      "required": true
    },
    "DATABASE_NAME":{
      "description": "Database name for MongoDB",
      "value": "FileStoreBot",
      "required": false
    },
    "API_HASH":{
      "description": "Your API Hash from my.telegram.org",
      "value": "",
      "required": true
    },
    "CHANNEL_ID":{
      "description": "Database channel ID (create private channel, add bot as admin, get ID from @username_to_id_bot)",
      "value": "",
      "required": true
    },
    "OWNER":{
      "description": "Your Telegram username (without @)",
      "value": "YourUsername",
      "required": false
    },
    "PORT": {
      "description": "Port for web server (leave default)",
      "value": "8001",
      "required": false
    },
    "TG_BOT_WORKERS": {
      "description": "Number of worker threads",
      "value": "200",
      "required": false
    },
    "PROTECT_CONTENT": {
      "description": "Protect contents from getting forwarded (True/False)",
      "value": "True",
      "required": false
    },
    "FSUB_LINK_EXPIRY": {
      "description": "Force-sub link expiry in seconds (0 = no expiry)",
      "value": "0",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  }
}
